<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.adolfalcantara.proyectoandroid.Main">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Ingrese nota aqui..."
        android:ems="14"
        android:layout_marginTop="30dp"
        android:id="@+id/etNota"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        tools:layout_height="wrap_content" />

    <Button
        android:text="Guardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"
        android:id="@+id/btSave"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:onClick="guardar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Ver notas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="55dp"
        android:layout_marginEnd="55dp"
        android:id="@+id/btView"
        android:onClick="ver"
        android:layout_alignBaseline="@+id/btSave"
        android:layout_alignBottom="@+id/btSave"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
